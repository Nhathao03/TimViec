	<script src="../../LayoutTimViec/js/site.js"></script>

	<script src="../../LayoutTimViec/js/jquery.js"></script>
	<!-- bootsnav js -->
	<script src="../../LayoutTimViec/js/bootsnav.js"></script>

	<!--feather.min.js-->
	<script src="../../LayoutTimViec/js/feather.min.js"></script>

	<!-- counter js -->
	<script src="../../LayoutTimViec/js/jquery.counterup.min.js"></script>
	<script src="../../LayoutTimViec/js/waypoints.min.js"></script>

	<!--slick.min.js-->
	<script src="../../LayoutTimViec/js/slick.min.js"></script>
	<!--Custom JS-->
	<script src="../../LayoutTimViec/js/custom.js"></script>

	<!--modernizr.min.js-->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>

	<!--bootstrap.min.js-->
	<script src="../../LayoutTimViec/js/bootstrap.min.js"></script>

	
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>


	@await RenderSectionAsync("Scripts", required: false)


</body>

</html>