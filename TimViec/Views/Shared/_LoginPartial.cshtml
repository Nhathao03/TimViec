@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav">

            @* User *@
            <li>
                <a style="color: #fff" asp-area="Identity" asp-page="/Account/Manage/Index">Cá nhân</a>
            </li>

            @* Admin *@
            <li>
                <a style="color: #fff" asp-area="Admin" asp-controller="Manager" asp-action="Index">Admin</a>
            </li>

            <li style="margin-right: 10px">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Đăng xuất</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a style="color: #fff" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a></li>
        <li><a style="color: #fff" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a></li>
    </ul>
}
