@model TimViec.Models.Company

@{
    ViewData["Title"] = "Delete_Company";
}
<br />
<h3>Bạn chắc chắn muốn xóa công ty @Html.DisplayFor(model => model.Name_company) ? </h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Tên công ty</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name_company)
        </dd>
        <dt>
            <p>Địa chỉ</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt>
            <p>Email</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            <p>Hình ảnh</p>
        </dt>
        <dd>
            <img src="~/LayoutTimViec/img/@Html.DisplayFor(model => model.Image)" alt="" />
        </dd>
        <dt>
            <p>Quy mô</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Company_size)
        </dd>
        <dt>
            <p>Loại hình</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Company_type)
        </dd>
        <dt>
            <p>Ngày đăng ký</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            <p>Mô tả</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete_Company">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Company" class="btn btn-primary">Trở về</a>
    </form>
</div>
