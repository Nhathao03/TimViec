@model IEnumerable<TimViec.Models.Company>

@{
    ViewData["Title"] = "Company";
}


<h2>Quản lý công ty</h2>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Danh sách tất cả công ty
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Tên công ty</th>
                    <th>Địa chỉ</th>
                    <th>Quy mô</th>
                    <th>Loại hình</th>
                    <th>Mô tả</th>
                    <th>Xóa</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Tên công ty</th>
                    <th>Địa chỉ</th>
                    <th>Quy mô</th>
                    <th>Loại hình</th>
                    <th>Mô tả</th> 
                    <th>Xóa</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name_company</td>
                        <td>@item.Location</td>
                        <td>@item.Company_size</td>
                        <td>@item.Company_type</td>
                        <td>@item.Description</td>
                        <td><a asp-action="Delete_Company" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>