@model TimViec.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete_User";
}


<br />
<p style="text-align: center; font-size: 23px; color: black">Bạn chắc chắn muốn xóa tài khoản @ViewBag.user ?</p>
<div>
    <br />
    <hr />
    <dl class="dl-horizontal" style="margin-left: 500px; color: black; font-size: 18px">
        <dt>
            <p>Tên công ty</p>
        </dt>
        <dd>
            @ViewBag.name
        </dd>
        <dt>
            <p>Email</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            <p>Quy mô</p>
        </dt>
        <dd>
            @ViewBag.Size
        </dd>
        <dt>
            <p>Loại hình</p>
        </dt>
        <dd>
            @ViewBag.Type
        </dd>
        <dt>
            <p>Địa chỉ</p>
        </dt>
        <dd>
            @ViewBag.Location
        </dd>

    </dl>


    <form asp-action="Delete_Company" style="
    display: flex;
    justify-content: center;
">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa tài khoản" class="btn btn-danger" /> |
        <a asp-action="Account_User" class="btn btn-primary">Trở lại</a>
    </form>

</div>
