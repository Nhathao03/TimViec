@model TimViec.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete_User";
}


<br />
<p style="text-align: center; font-size: 23px; color: black">Bạn chắc chắn ?</p>
<div style="margin-left: 500px; color: black; font-size: 18px">
    <br />
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Họ và tên</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Fullname)
        </dd>
        <dt>
            <p>Email</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            <p>Số điện thoại</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            <p>Ngày sinh</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Birth)
        </dd>
        
    </dl>

    
    <form asp-action="Delete_User">
        <input type="hidden" asp-for="Email" />
        <input type="submit" value="Xóa tài khoản" class="btn btn-default" />
        <a asp-action="Account_User">Trở lại</a>
    </form>
    }
</div>
